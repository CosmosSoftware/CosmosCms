@using Cosmos.Cms.Common.Services.Configurations
@model InstallationViewModel
@{
    Layout = Url.Content("~/Areas/Identity/Pages/_Layout.cshtml");
    ViewData["Title"] = "Administrator Account";
}

<div class="container mt-5 mb-5 pt-2">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-light text-dark">
                <div class="card-header">
                    <h3 class="card-title">
                        Administrator Account Registration
                    </h3>
                </div>
                <div class="card-body">
                    <p>Use the form below to register an administrator account for this website.</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="AdminEmail"></label>
                            <input asp-for="AdminEmail" class="form-control" />
                            <span asp-validation-for="AdminEmail" class="badge badge-primary"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="badge badge-primary"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="badge badge-primary"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Register Administrator Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}