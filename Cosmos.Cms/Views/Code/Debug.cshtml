@using Cosmos.Cms.Common.Data
@model NodeScript
@{
    // /Views/Code/Edit
    Layout = null;
    ViewData["Title"] = "Debugger";
}
<!DOCTYPE HTML>
<html>
<head lang="en">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <link rel="stylesheet" href="https://highlightjs.org/static/demo/styles/base16/atelier-dune.css">

    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
    <!--
    Code highlighting
    https://highlightjs.org/
    -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.6.0/highlight.min.js"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card-head">
                    Input
                </div>
                <div class="card-body" style="overflow-y: auto;">
                    <form id="fromRun">
                        @if (Model.InputVars != null && Model.InputVars.Length > 0)
                        {
                            foreach (var item in Model.InputVars)
                            {
                                <div class="mb-3">
                                    <label for="@item">@item</label>
                                    <input name="@item" id="@item" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <button id="btnForm" class="btn btn-primary" type="button">Run</button>
                                </div>
                            }
                        }
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card bg-dark text-light">
                    <div class="card-head">
                        Output
                    </div>
                    <div class="card-body" style="overflow-y: auto;">
<pre><code id="runOutput" class="language-json hljs"></code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    <script>

        hljs.highlightAll();
        
        $(document).ready(function () {
            $("#fromRun").submit(function (e) {
                e.preventDefault();

                var data = $("#fromRun").serialize();

                $.post("@Url.Action("Run", "Code", new { Id = Model.Id })",
                    data,
                    function (response) {
                        $("#runOutput").html(response);
                    });
            });
        });
    </script>

</body>
</html>